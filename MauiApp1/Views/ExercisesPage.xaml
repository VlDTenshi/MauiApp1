<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.ExercisesPage"
             Title="Exercises">
    <VerticalStackLayout>
        <Label 
            Text="Here is all about exercises!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView x:Name="listExercises" BackgroundColor="Transparent"
          SeparatorColor="Aqua"
          >

        </ListView>
        <Button x:Name="btnEditExercise" Clicked="btnEditExercise_Clicked"  Text="Edit Exercise" />
        <Button x:Name="btnAddExercise" Clicked="btnAddExercise_Clicked"  Text="Add Exercise"/>
    </VerticalStackLayout>
</ContentPage>