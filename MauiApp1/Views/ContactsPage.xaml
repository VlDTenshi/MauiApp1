<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.ContactsPage"
             Title="Contacts Page">
    <VerticalStackLayout>
        <Label 
            Text="Here is all needed contact!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView x:Name="listContacts" BackgroundColor="Transparent"
          SeparatorColor="Aqua"
          RowHeight="65"
          ItemSelected="listContacts_ItemSelected"
          ItemTapped="listContacts_ItemTapped"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                              Detail="{Binding Email}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <Button x:Name="btnEditContact" Clicked="btnEditContact_Clicked"  Text="Edit Contact" />
        <Button x:Name="btnAddContact" Clicked="btnAddContact_Clicked"  Text="Add Contact"/>
    </VerticalStackLayout>
</ContentPage>