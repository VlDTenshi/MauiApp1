<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.EditExercisePage"
             Title="EditExercisePage">
    <StackLayout Padding="20">
        <Entry Text="{Binding ExerciseName}" Placeholder="Enter exercise name" />
        <Entry Text="{Binding ExerciseDescription}" Placeholder="Enter exercise description" />
        <Entry Text="{Binding ExerciseRepetition}" Placeholder="Enter repetitions" />

        <!-- Кнопка для сохранения изменений -->
        <Button Text="Save"
            Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>